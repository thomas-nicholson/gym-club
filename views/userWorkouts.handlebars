<main class="body"> 
  <div class="workoutBtns">
    <a class="back-button" href="/user/{{id}}">Back</a>
    <a class="back-button" href="/newWorkout">New Workout</a>
  </div>

    <h1 class="blogHeading">Workouts!</h1>

    {{#if workouts.length}}
    {{#each workouts as |workout| }}
      
    
      <div class="individual-blog" onclick="location.href='/exercises/{{workout.id}}'">
      {{#if allowEdit}}
      <button id="deleteWorkout" class="back-button" data-id="{{workout.id}}">Delete</button>
      {{/if}}
        
        <a href="/exercises/{{workout.id}}" class="headingA"><h1 class="blog-heading">{{workout.title}}</h1></a>
    
        <div class="blog-para">
          <p>
            {{workout.description}}
          </p>
        </div>
      </div>
    {{/each}}
    {{else}}
    <h2>You currently have no workouts, click "New Workout" to create one!</h2>
    {{/if}}
  </main>

